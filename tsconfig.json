{
  "compilerOptions": {
    "baseUrl": "src/",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2015.promise"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}
